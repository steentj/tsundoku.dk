{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tsundoku.dk/schema/books.schema.json",
  "title": "Books",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id","slug","title","authors","type","purchase_reason","status"],
    "properties": {
      "id": { "type": "string", "minLength": 1 },
      "slug": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" },
      "title": { "type": "string", "minLength": 1 },
      "authors": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } },
      "type": { "type": "string", "enum": ["physical-new","physical-used","ebook","audiobook"] },
      "purchase_reason": { "type": "string" },
      "status": { "type": "string", "enum": ["not-started","reading","finished"] },
      "finished_at": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
      "review_text": { "type": "string" },
      "rating": { "type": "integer", "minimum": 1, "maximum": 5 },
      "tags": { "type": "array", "items": { "type": "string" } },
      "cover_image": { "type": "string" },
      "notes": { "type": "string" }
    },
    "allOf": [
      {
        "if": { "properties": { "status": { "const": "finished" } } },
        "then": { "required": ["finished_at"] }
      }
    ]
  }
}
